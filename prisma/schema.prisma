// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // URL is configured in prisma.config.ts for migrations
}

// Category model for organizing links
model Category {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String?  // Hex color code for UI
  imageUrl    String?  // Category avatar/image URL
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  links       AffiliateLink[]
  lists       CuratedList[]
}

// E-commerce Brand model (N11, Trendyol, Hepsiburada, Amazon, etc.)
model EcommerceBrand {
  id          String   @id @default(cuid())
  name        String   @unique // N11, Trendyol, Hepsiburada, Amazon
  slug        String   @unique // n11, trendyol, hepsiburada, amazon
  logo        String?  // Logo URL or path
  color       String?  // Brand color (hex)
  website     String?  // Brand website URL
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  links       AffiliateLink[] // Deprecated: Use ProductUrl instead
  productUrls ProductUrl[]    // Multiple URLs for products
  
  @@index([slug])
  @@index([isActive])
}

// User model - Supabase auth users are stored separately, this is for additional user data if needed
model User {
  id        String   @id @default(cuid())
  supabaseUserId String @unique // Supabase auth user ID
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  links     AffiliateLink[]
}

// Affiliate Link model
model AffiliateLink {
  id          String   @id @default(cuid())
  title       String
  description String?
  originalUrl String?  // Deprecated: Use ProductUrl instead. Kept for backward compatibility
  shortUrl    String   @unique // Shortened URL slug
  customSlug  String?  @unique // Optional custom slug
  imageUrl    String?  // Product image URL
  youtubeUrl  String?  // YouTube video URL
  
  // Relations
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  ecommerceBrandId String? // Deprecated: Use ProductUrl instead. Kept for backward compatibility
  ecommerceBrand    EcommerceBrand? @relation(fields: [ecommerceBrandId], references: [id], onDelete: SetNull)
  
  // Status and tracking
  isActive    Boolean  @default(true)
  clickCount  Int      @default(0)
  
  // Metadata
  tags        String[] // Array of tags
  notes       String?  // Internal notes
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  clicks      Click[]
  lists       ListedLink[]
  productUrls ProductUrl[] // Multiple e-commerce URLs for this product
  
  @@index([userId])
  @@index([categoryId])
  @@index([ecommerceBrandId])
  @@index([shortUrl])
  @@index([isActive])
}

// Product URL model - Multiple e-commerce URLs for a single product
model ProductUrl {
  id              String   @id @default(cuid())
  linkId          String
  link            AffiliateLink @relation(fields: [linkId], references: [id], onDelete: Cascade)
  ecommerceBrandId String
  ecommerceBrand  EcommerceBrand @relation(fields: [ecommerceBrandId], references: [id], onDelete: Cascade)
  url             String   // Affiliate URL for this brand
  isPrimary       Boolean  @default(false) // Primary/default URL
  order           Int      @default(0) // Display order
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  clicks          Click[]
  
  @@index([linkId])
  @@index([ecommerceBrandId])
  @@index([isPrimary])
  @@unique([linkId, ecommerceBrandId]) // One URL per brand per product
}

// Click tracking model
model Click {
  id          String   @id @default(cuid())
  linkId      String
  link        AffiliateLink @relation(fields: [linkId], references: [id], onDelete: Cascade)
  productUrlId String? // Which specific URL was clicked
  productUrl  ProductUrl? @relation(fields: [productUrlId], references: [id], onDelete: SetNull)
  
  // Tracking data
  ipAddress   String?
  userAgent   String?
  referrer    String?
  country     String?
  city        String?
  device      String?  // mobile, desktop, tablet
  browser     String?
  
  // Conversion tracking
  converted   Boolean  @default(false)
  
  timestamp   DateTime @default(now())
  
  @@index([linkId])
  @@index([productUrlId])
  @@index([timestamp])
}

// Curated List model - Kategorilere göre organize edilmiş ürün listeleri
model CuratedList {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  shortUrl    String?  @unique // Kısa URL slug'ı (eneso.cc/{shortUrl})
  description String?
  coverImage  String?  // Kapak resmi URL
  youtubeUrl  String?  // YouTube video URL
  isFeatured  Boolean  @default(false) // Anasayfada gösterilsin mi?
  
  // Relations
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  // Many-to-many with AffiliateLink
  links       ListedLink[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([categoryId])
  @@index([slug])
  @@index([shortUrl])
  @@index([isFeatured])
}

// Junction table for many-to-many relationship between CuratedList and AffiliateLink
model ListedLink {
  id            String   @id @default(cuid())
  listId        String
  linkId        String
  order         Int      @default(0) // Sıralama için
  
  list          CuratedList @relation(fields: [listId], references: [id], onDelete: Cascade)
  link          AffiliateLink @relation(fields: [linkId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime @default(now())
  
  @@unique([listId, linkId])
  @@index([listId])
  @@index([linkId])
  @@index([order])
}
